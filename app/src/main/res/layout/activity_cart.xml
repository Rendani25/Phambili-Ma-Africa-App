<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back_button_description"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/cartItemsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shopping_cart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:gravity="center" />

        <!-- Spacer for balance -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Empty Cart State -->
    <TextView
        android:id="@+id/emptyCartText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/empty_cart_message"
        android:textSize="18sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Cart Items RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Total Amount -->
    <TextView
        android:id="@+id/totalAmountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_amount_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:gravity="end"
        android:padding="16dp" />

    <!-- Checkout Button -->
    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/proceed_to_checkout_default"
        android:textColor="@color/text_white"
        android:background="@drawable/button_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Clear Cart Button -->
    <Button
        android:id="@+id/clearCartButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/clear_cart"
        android:textColor="@color/text_black"
        android:background="@drawable/button_yellow"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Continue Shopping Button -->
    <Button
        android:id="@+id/continueShoppingButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/continue_shopping"
        android:textColor="@color/text_white"
        android:background="@drawable/button_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>