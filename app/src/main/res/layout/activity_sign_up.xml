<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_Up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Your existing content remains the same -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Logo"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-40dp"/>

            <TextView
                android:id="@+id/signup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#0066CC"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/signup_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Making spaces shine since 2019"
                android:textColor="#A0A6B2"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Username -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/input_bg_rounded"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_user_vector"
                    android:contentDescription="User icon" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Username"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/input_bg_rounded"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_email"
                    android:contentDescription="Email icon" />

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Email address"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/input_bg_rounded"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_lock"
                    android:contentDescription="Password icon" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"/>

                <ImageButton
                    android:id="@+id/signup_toggle_password"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Show password" />
            </LinearLayout>

            <!-- Password Requirements -->
            <LinearLayout
                android:id="@+id/password_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password Requirements:"
                    android:textStyle="bold"
                    android:textColor="#0066CC"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"/>

                <TextView android:id="@+id/req_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• At least 8 characters long"
                    android:textColor="#A0A6B2"/>

                <TextView android:id="@+id/req_uppercase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• One uppercase letter (A–Z)"
                    android:textColor="#A0A6B2"/>

                <TextView android:id="@+id/req_lowercase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• One lowercase letter (a–z)"
                    android:textColor="#A0A6B2"/>

                <TextView android:id="@+id/req_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• One number (0–9)"
                    android:textColor="#A0A6B2"/>

                <TextView android:id="@+id/req_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• One special character (!@#\$% etc.)"
                    android:textColor="#A0A6B2"/>

                <TextView android:id="@+id/req_spaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• No spaces allowed"
                    android:textColor="#A0A6B2"/>
            </LinearLayout>

            <!-- Confirm Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/input_bg_rounded"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_lock"
                    android:contentDescription="Confirm password icon" />

                <EditText
                    android:id="@+id/signup_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Confirm Password"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"/>

                <ImageButton
                    android:id="@+id/signup_confirm_toggle_password"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Show password" />
            </LinearLayout>

            <!-- Sign Up Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Create Account"
                android:textColor="#FFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:backgroundTint="#0066CC"
                android:fontFamily="sans-serif-medium"
                android:elevation="2dp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="14dp"/>

            <!-- ADD THIS: Login Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#A0A6B2"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="#0066CC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>