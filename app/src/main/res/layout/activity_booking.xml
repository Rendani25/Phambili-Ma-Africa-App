<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="20dp"
            android:paddingHorizontal="8dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back_button_description"
                app:tint="@color/white"
                android:background="@drawable/circle_primary_blue"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/book_cleaning_service"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"
                android:letterSpacing="0.02" />

            <!-- Using existing broom icon instead of sparkle -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_broom"
                android:contentDescription="@string/cleaning_icon_description"
                app:tint="@color/white"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Main Booking Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                
                <!-- Welcome Message -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#f0f9ff"
                    android:layout_marginBottom="24dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chat"
                                android:contentDescription="@string/chat_icon_description"
                                app:tint="@color/primary_blue" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hi there,"
                                android:textColor="@color/primary_blue"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thank you for connecting through our online booking system!"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="After you have submitted this, you will receive confirmation where you will select a date &amp; time for a virtual consultation to discuss your needs, view your space, provide you a quote, and get you booked in with us!"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp" />
                            
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#cbd5e1"
                            android:layout_marginBottom="16dp" />
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thank you,"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phambili Ma-Africa - Trading Enterprise"
                            android:textColor="@color/primary_blue"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Service Details Section -->                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_clipboard"
                                android:contentDescription="@string/service_details_icon"
                                app:tint="@color/primary_blue" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/service_details"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            
                            <!-- Property Type -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/property_type"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <Spinner
                                    android:id="@+id/property_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:paddingHorizontal="12dp"
                                    android:spinnerMode="dropdown"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            
                            <!-- Service Frequency -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/service_frequency"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <Spinner
                                    android:id="@+id/service_frequency"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:paddingHorizontal="12dp"
                                    android:spinnerMode="dropdown"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Schedule Section -->                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="@string/calendar_icon_description"
                                app:tint="@color/primary_blue" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/schedule"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            
                            <!-- Date Picker -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/preferred_date"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <EditText
                                    android:id="@+id/booking_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:drawableEnd="@drawable/ic_calendar"
                                    android:focusable="false"
                                    android:hint="@string/select_date_hint"
                                    android:inputType="none"
                                    android:paddingHorizontal="12dp"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                                    
                                <FrameLayout
                                    android:id="@+id/date_hint_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">
                                    
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="4dp">
                                        
                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_info"
                                            android:contentDescription="@string/info_icon_description"
                                            app:tint="@color/primary_blue" />
                                            
                                        <TextView
                                            android:id="@+id/date_hint_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/primary_blue"
                                            android:textSize="12sp"
                                            android:layout_marginStart="4dp" />
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>
                            
                            <!-- Time Picker -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/preferred_time"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <Spinner
                                    android:id="@+id/booking_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:paddingHorizontal="12dp"
                                    android:spinnerMode="dropdown"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Service Location Section -->                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                android:contentDescription="@string/location_icon_description"
                                app:tint="@color/primary_blue" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/service_location"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                        
                        <!-- Street Address -->                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="12dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/street_address"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />
                                
                            <EditText
                                android:id="@+id/address_street"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/rounded_edittext_modern"
                                android:hint="@string/enter_street_address_hint"
                                android:inputType="textPostalAddress"
                                android:paddingHorizontal="12dp"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                        
                        <!-- City and State Row -->                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">
                            
                            <!-- City -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/city"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <EditText
                                    android:id="@+id/address_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:hint="@string/city"
                                    android:inputType="textPostalAddress"
                                    android:paddingHorizontal="12dp"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            
                            <!-- State/Province -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/state"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <EditText
                                    android:id="@+id/address_state"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:hint="@string/state"
                                    android:inputType="textPostalAddress"
                                    android:paddingHorizontal="12dp"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        
                        <!-- Postal Code -->                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/postal_code"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />
                                
                            <EditText
                                android:id="@+id/address_postal_code"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/rounded_edittext_modern"
                                android:hint="@string/postal_code"
                                android:inputType="textPostalAddress"
                                android:paddingHorizontal="12dp"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Additional Information Section -->                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_send_vector"
                                android:contentDescription="@string/edit_icon_description"
                                app:tint="@color/primary_blue" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/additional_information"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/special_requirements"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />
                                
                            <EditText
                                android:id="@+id/special_requests"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/rounded_edittext_modern"
                                android:gravity="top"
                                android:hint="@string/special_requirements_hint"
                                android:inputType="textMultiLine"
                                android:padding="12dp"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Contact Information Section -->                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_user_vector"
                                android:contentDescription="@string/user_icon_description"
                                app:tint="@color/primary_blue" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/your_information"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                        
                        <!-- Name and Phone Row -->                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">
                            
                            <!-- Full Name -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/full_name"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <EditText
                                    android:id="@+id/customer_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:inputType="textPersonName"
                                    android:paddingHorizontal="12dp"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            
                            <!-- Phone Number -->                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone_number"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />
                                    
                                <EditText
                                    android:id="@+id/customer_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext_modern"
                                    android:inputType="phone"
                                    android:paddingHorizontal="12dp"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        
                        <!-- Email Address -->                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_address"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />
                                
                            <EditText
                                android:id="@+id/customer_email"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/rounded_edittext_modern"
                                android:inputType="textEmailAddress"
                                android:paddingHorizontal="12dp"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                
                <!-- Form Actions -->                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/submit_btn"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:backgroundTint="@color/primary_green"
                            android:text="@string/request_quotation"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_send_vector"
                            app:iconGravity="textStart"
                            android:elevation="4dp" />
                            
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="12dp">
                            
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_info"
                                android:contentDescription="@string/info_icon_description"
                                app:tint="@color/text_secondary" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quotation_note"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>