<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cleaning"
            android:contentDescription="@string/service_image_description" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_name_default"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_price_default"
                android:textColor="#2F5AFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/service_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_rating_default"
                    android:textColor="#FFAA00"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/service_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_reviews_default"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/book_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/book_now"
                android:textSize="12sp"
                android:backgroundTint="#2F5AFF"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>